{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function () {
    const progressBar = document.querySelector('.step-wizard-list');
    const steps = document.querySelectorAll('.step-wizard-item');

    // Fonction pour mettre à jour la barre de progression
    function updateProgressBar() {
        const totalSteps = steps.length;
        const currentStep = Array.from(steps).findIndex(step => step.classList.contains('current-item')) + 1;
        const progressPercentage = (currentStep / totalSteps) * 100;

        progressBar.style.width = `${progressPercentage}%`;
    }

    // Appeler la fonction initiale
    updateProgressBar();

    // Ajouter un gestionnaire d'événement pour chaque étape
    steps.forEach((step, index) => {
        step.addEventListener('click', function () {
            // Réinitialiser toutes les étapes
            steps.forEach(s => s.classList.remove('current-item'));

            // Définir l'étape actuelle
            steps[index].classList.add('current-item');

            // Mettre à jour la barre de progression
            updateProgressBar();
        });
    });

    // Animation automatique des étapes
    let currentStep = 1;
    setInterval(() => {
        // Réinitialiser toutes les étapes
        steps.forEach(s => s.classList.remove('current-item'));

        // Définir l'étape actuelle
        steps[currentStep - 1].classList.add('current-item');

        // Mettre à jour la barre de progression
        updateProgressBar();

        // Passer à l'étape suivante
        currentStep = (currentStep % steps.length) + 1;
    }, 2000); // Réglez l'intervalle selon votre préférence
});

</script>


