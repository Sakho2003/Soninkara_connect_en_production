        <!--=============== CSS ===============-->
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">

    {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN6b1pCPV8L4uaoxHdBr8FQF7JqH8" crossorigin="anonymous"> #}


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    {% block stylesheets %}{% endblock %}

    {% block header %}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    {% endblock %}

</head>

<body>
<nav>
    <a href="{{ path('accueil')}}" class="nav-icon" aria-label="homepage" aria-current="page">
        <img src="{{ asset('img/plane.png') }}" alt="chat icon" />
        <span>Soni Connect</span>
    </a>

    <div class="main-navlinks">
        <button type="button" class="hamburger" aria-label="Toggle Navigation" aria-expanded="false">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="navlinks-container">
            <a href="{{ path('accueil') }}" aria-current="page">Accueil</a>
            <a href="{{ path('a_propos') }}">A-propos</a>
            <a href="{{ path('envoie.commande') }}">Envoyer un colis</a>
            <a href="{{ path('suivi.colis') }}">Suivre un colis</a>
            <a href="{{ path('app_contact') }}">Contact</a>
        </div>
    </div>
<div class="nav-authentication">
    <div class="user-toggler">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <!-- Utilisateur connecté -->
            <div class="sign-btns">
                {% if is_granted('ROLE_ADMIN') %}
                    <!-- Lien pour l'espace admin -->
                    <a href="{{ path('admin') }}">
                        <button type="button">Espace Admin</button>
                    </a>
                {% endif %}
                <a href="{{ path('espace_prive') }}">
                    <button type="button">Espace Privé</button>
                </a>
                <a href="{{ path('logout') }}">
                    <button type="button">Se déconnecter</button>
                </a>
            </div>
        {% else %}
            <!-- Utilisateur non connecté -->
            <div class="sign-btns">
                <a href="{{ path('login') }}">
                    <button type="button">Connexion</button>
                </a>
                <a href="{{ path('register') }}">
                    <button type="button">Inscription</button>
                </a>
            </div>
        {% endif %}

</div>        
</div>

</nav>




{% block body %}{% endblock %}

