{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Modifier la réservation{% endblock %}

{% block styles %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Modifier la réservation #{{ reservation.id }}</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="card">
                <div class="card-body">
                    <div class="form-row">
                        {# Insérez vos champs de formulaire ici, par exemple : #}
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        {# Répétez pour les autres champs #}
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                <a href="{{ path('app_colis') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>

    <script>
        // JavaScript pour la validation Bootstrap (à adapter selon vos besoins)
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
{% endblock %}
